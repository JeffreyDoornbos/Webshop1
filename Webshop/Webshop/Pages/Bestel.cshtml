@page
@model Webshop.Pages.BestelModel
@{
    ViewData["Title"] = "Bestellen";
}

<head>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
</head>

<style>
    .container {
  margin-top: 50px;
}

.form-group label {
  font-weight: 500;
  color: #444;
}

.form-control {
  border-radius: 0;
  border: none;
  box-shadow: none;
  border-bottom: 1px solid #dcdcdc;
  padding: 10px 0;
  font-size: 18px;
  font-weight: 400;
}

.form-control:focus {
  border-color: #007aff;
  box-shadow: none;
}

.btn-primary {
  background-color: #007aff;
  border-color: #007aff;
  font-size: 20px;
  font-weight: 500;
  border-radius: 0;
}

.btn-primary:hover {
  background-color: #0062cc;
  border-color: #0062cc;
}


  .btn-primary {
    font-size: 18px;
  }
}

</style>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <form method="post" enctype="multipart/form-data">
                    <h1 class="display-4">Bestellen</h1>
                    <div class="form-group">
                        <label for="Naam">Naam:</label>
                        <input type="text" class="form-control" id="Naam" name="Naam">
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="email" class="form-control" id="Email" name="Email">
                    </div>
                    <div class="form-group">
                        <label for="Postcode">Adres/Postcode</label>
                        <input type="text" class="form-control" id="Postcode" name="Postcode">
                    </div>
                    <div class="form-group">
                        <label for="Woonplaats">Woonplaats:</label>
                        <input type="text" class="form-control" id="Woonplaats" name="Woonplaats">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-lg btn-primary">Bestellen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</body>
