@page "{id:int}"
@model Webshop.Pages.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post">
                <div class="form-group">
                    <label for="gebruikersnaam">Gebruikersnaam:</label>
                    <input type="text" class="form-control" id="gebruikersnaam" name="gebruikersnaam" value="@Model.User.Gebruikersnaam" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="@Model.User.Email" required>
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">Opslaan</button>
            </form>
        </div>
    </div>
</div>
