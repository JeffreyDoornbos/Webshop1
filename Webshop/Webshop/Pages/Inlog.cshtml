@page
@model Webshop.Pages.InlogModel
@{
    ViewData["Title"] = "Inloggen";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" class="p-4 rounded shadow">
                <h1 class="display-4 mb-4">@ViewData["Title"]</h1>
                <div class="form-group">
                    <label for="gebruikersnaam">Gebruikersnaam:</label>
                    <input type="text" class="form-control" id="gebruikersnaam" name="gebruikersnaam" asp-for="Gebruikersnaam" required>
                </div>
                <div class="form-group">
                    <label for="wachtwoord">Wachtwoord:</label>
                    <input type="password" class="form-control" id="wachtwoord" name="wachtwoord" asp-for="Wachtwoord" required>
                </div>
                <br />
                <button type="submit" class="btn btn-lg btn-primary btn-block">Inloggen</button>
            </form>
        </div>
    </div>
</div>


<style>
    .container {
  margin-top: 50px;
}

.form-control {
  border-radius: 0;
  border: none;
  box-shadow: none;
  border-bottom: 1px solid #dcdcdc;
  padding: 10px 0;
  font-size: 18px;
  font-weight: 400;
}

.form-control:focus {
  border-color: #007aff;
  box-shadow: none;
}

.btn-primary {
  background-color: #007aff;
  border-color: #007aff;
  font-size: 20px;
  font-weight: 500;
  border-radius: 0;
}

.btn-primary:hover {
  background-color: #0062cc;
  border-color: #0062cc;
}

.p-4 {
  padding: 20px;
}

.rounded {
  border-radius: 10px;
}

.shadow {
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}


  .btn-primary {
    font-size: 18px;
  }

</style>