@page
@model Webshop.Pages.KlantBetsellingenModel
@{
}




<input type="hidden" asp-for="KlantID" />

<div class="container">
    <h1 class="display-4">Bestellingen</h1>
    <table class="table table-hover table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">FactuurID</th>
                @*<th scope="col">Email</th>*@
                <th scope="col">Datum</th>
                <th scope="col">Betaalwijzen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bestelling in Model.KlantBestellingen)
            {
                <tr>
                    <td>2023-@bestelling.BestelID</td>
                    @*<td>@bestelling.naam</td>*@
                    <td>@bestelling.datum</td>
                    <td>@bestelling.betaalwijzen</td>
                    <td>
                        <a href="/BestelDetails?BestelID=@bestelling.BestelID" class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i>Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/KlantenSysteem" class="btn btn-primary">Terug</a>
</div>
