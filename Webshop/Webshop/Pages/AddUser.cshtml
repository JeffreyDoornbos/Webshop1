@page
@model Webshop.Pages.AddUserModel
@{
    ViewData["Title"] = "Add User";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post">
                <div class="form-group">
                    <label for="gebruikersnaam">Gebruikersnaam:</label>
                    <input type="text" class="form-control" id="gebruikersnaam" name="gebruikersnaam" asp-for="Gebruikersnaam" required>
                </div>
                <div class="form-group">
                    <label for="wachtwoord">Wachtwoord:</label>
                    <input type="password" class="form-control" id="wachtwoord" name="wachtwoord" asp-for="Wachtwoord" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" asp-for="Email" required>
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">Add User</button>
            </form>
        </div>
    </div>
</div>
