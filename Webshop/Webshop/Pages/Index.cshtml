                </div>
            </div>
            <!-- sidebar -->
            <!-- products -->
            <div class="col-lg-9">
                <div class="row justify-content-start">
                    @foreach (string[] laptops in Model.laptopss)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="card mb-4">
                                <img class="card-img-top" src="Images/@laptops[3]" alt="@laptops[1]" style="object-fit: cover; height: 180px; ">
