@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Request.Query["refresh"] == "true")
{
    <meta http-equiv="refresh" content="0">
}

<style>
    .icon-hover:hover {
        border-color: #3b71ca !important;
        background-color: white !important;
    }

        .icon-hover:hover i {
            color: #3b71ca !important;
        }
</style>

<section class="my-4">
    <div class="container">
        <div class="row">
            <!-- sidebar -->
            <div class="col-lg-3">
                <!-- Toggle button -->
                <button class="btn btn-outline-secondary mb-3 w-100 d-lg-none"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span>Show filter</span>
                </button>
                <!-- Collapsible wrapper -->
                <div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button text-dark bg-light"
                                    data-mdb-target="#panelsStayOpen-collapseTwo"
                                    aria-expanded="true"
                                    aria-controls="panelsStayOpen-collapseTwo">
                                Type
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo">
                            <div class="accordion-body">
                                <div>
                                    <form method="get">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filterOption" value="" id="flexRadioDefault1" checked>
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                All
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filterOption" value="Macbook" id="flexRadioDefault2">
                                            <label class="form-check-label" for="flexRadioDefault2">
                                                Macbook
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filterOption" value="Ipad" id="flexRadioDefault3">
                                            <label class="form-check-label" for="flexRadioDefault3">
                                                Ipad
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filterOption" value="Iphone" id="flexRadioDefault4">
                                            <label class="form-check-label" for="flexRadioDefault4">
                                                Iphone
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filterOption" value="Mac" id="flexRadioDefault5">
                                            <label class="form-check-label" for="flexRadioDefault5">
                                                Mac
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filterOption" value="Airpods" id="flexRadioDefault6">
                                            <label class="form-check-label" for="flexRadioDefault6">
                                                Airpods
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Apply</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
