@page
@model Webshop.Pages.BestelDetailsModel
@{
}

<input type="hidden" asp-for="BestelID" />

<div class="container">
    <h1 class="display-4">Bestel Details</h1>
    <table class="table table-hover table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">BestelID</th>
                <th scope="col">ProductID</th>
                <th scope="col">naam</th>
                <th scope="col">Aantal</th>
                <th scope="col">Totaal Prijs</th>
                <th scope="col">Afbeelding</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Product in Model.BestelDetails)
            {
                <tr>
                    <td>@Product.BestelID</td>
                    <td>@Product.ProductID</td>
                    <td>@Product.naam</td>
                    <td>@Product.Aantal</td>
                    <td>@Product.totaalprijs</td>
                    <td><img style="width:100px;" src='Images\@Product.afbeelding' class="img-fluid"></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/KlantenSysteem" class="btn btn-primary">Terug</a>
</div>