@page
@model Webshop.Pages.UserManagementModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Gebruikersnaam</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Gebruikersnaam</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-page="./EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                <form asp-page-handler="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?')">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <a asp-page="/AddUser" class="btn btn-primary">Add User</a>
            </div>
        </div>
    </div>
</div>
