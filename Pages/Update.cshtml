@page
@model Webshop.Pages.UpdateModel
@{
    ViewData["Title"] = "Product aanpassen";
}

<div class="container">
    <h1 class="display-4">Update product</h1>
    <form method="post">
        <input type="hidden" asp-for="artikelnummer" />
        <div class="form-group">
            <label for="naam">Naam:</label>
            <input type="text" id="naam" name="naam" asp-for="naam" class="form-control" />
        </div>
        <div class="form-group">
            <label for="prijs">Prijs:</label>
            <input type="text" id="prijs" name="prijs" asp-for="prijs" class="form-control" />
        </div>
        <div class="form-group">
            <label for="afbeelding">Afbeelding:</label>
            <input type="text" id="afbeelding" name="afbeelding" asp-for="afbeelding" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Update</button>
        <a href="/Beheer" class="btn btn-primary">Back</a>
    </form>
</div>